<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/infobk"
    tools:context=".ReviewActivity">


    <ImageView
        android:id="@+id/imgReview"
        android:layout_width="320dp"
        android:layout_height="280dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="136dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="Artwork Image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCorrectAnswer"
        android:layout_width="308dp"
        android:layout_height="70dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="454dp"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNextReview"
        android:layout_width="274dp"
        android:layout_height="72dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="540dp"
        android:backgroundTint="#D99C1D"
        android:text="ððžð±ð­"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtReviewQuestion"
        android:layout_width="364dp"
        android:layout_height="92dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


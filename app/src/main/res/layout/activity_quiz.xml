<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reviewbk"
    android:orientation="vertical"
    tools:context=".QuizActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Question Text -->
            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textColor="#222222"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Artwork Image -->

            <ImageView
                android:id="@+id/imgReview"
                android:layout_width="327dp"
                android:layout_height="294dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="Artwork Image"
                android:scaleType="centerCrop" />

            <!-- Feedback Text -->

            <!-- Answer Buttons -->
            <TextView
                android:id="@+id/txtFeedback"
                android:layout_width="343dp"
                android:layout_height="65dp"
                android:layout_marginBottom="16dp"
                android:textColor="#0F0D0D"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTrue"
                    android:layout_width="8dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2E7D32"
                    android:text="ð“ð«ð®ðž"
                    android:textColor="#181616"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnFalse"
                    android:layout_width="0dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#C62828"
                    android:text="ð…ðšð¥ð¬ðž"
                    android:textColor="#0B0A0A"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Next Button -->
            <Button
                android:id="@+id/btnNext"
                android:layout_width="202dp"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#A6431C"
                android:enabled="false"
                android:text="ððžð±ð­"
                android:textColor="#090909"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

